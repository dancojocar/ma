<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <!--
          The launcher icon without any splash screen settings.
          On API level 31 and above, this still shows the default splash screen.
          Note that the activity should use a splash screen theme.
        -->
        <activity
            android:name=".DefaultActivity"
            android:exported="true"
            android:label="@string/default_splash_screen"
            android:theme="@style/Theme.App.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          The launcher icon that shows the splash screen with an animated icon.
        -->
        <activity
            android:name=".AnimatedActivity"
            android:exported="true"
            android:label="@string/animated_splash_screen"
            android:theme="@style/Theme.App.SplashScreen.Animated">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          The launcher icon that shows the splash screen with further customization.
        -->
        <activity
            android:name=".CustomActivity"
            android:exported="true"
            android:label="@string/custom_splash_screen"
            android:theme="@style/Theme.App.SplashScreen.Animated">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
